<div class="container">
<h1>Top Youtube Channels - Burundi</h1>

<table>
  <thead>
    <tr>
      <th scope="col">Rank</th>
      <th scope="col">Youtuber</th>
      <th scope="col">Subscribers</th>
      <th scope="col">Views Count</th>
      <th scope="col">Video Count</th>
      <th scope="col">Published At</th>
    </tr>
  </thead>
  <tbody>
    <% @youtubers.each.with_index(1) do |youtuber, index| %>
      <tr>
        <td><%= index %></span></td>
        <td><%= youtuber.title %></td>
        <td><%= youtuber.subscriber_count %></td>
        <td><%= youtuber.view_count %></td>
        <td><%= youtuber.video_count %></td>
        <td><%= youtuber.published_at.strftime('%b %-d, %Y') %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
